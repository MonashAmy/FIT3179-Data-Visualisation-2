{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
        "width": 800,
    "height": 300,
    "data": {
      "url": "https://raw.githubusercontent.com/MonashAmy/FIT3179-Data-Visualisation-2/refs/heads/main/data/data6.csv",
      "format": {
        "type": "csv"
      }
    },
    "repeat": {"layer": ["Overseas arrivals", "Overseas departures", "Net overseas migration"]},
    "spec": {
      "mark": "bar",
      "encoding": {
        "x": {
          "field": "State",
          "type": "nominal",
          "axis": {
            "labelAngle": 45
          }
        },
        "y": {
          "aggregate": "sum",
          "field": {"repeat": "layer"},
          "type": "quantitative",
          "title": "Total Count"
        },
        "color": {
          "datum": {"repeat": "layer"},
          "title": "Migration Type"
        },
        "xOffset": {"datum": {"repeat": "layer"}}
      }
    },
    "config": {
      "mark": {"invalid": null}
    }
  }