{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    
    "title": {
      "text": "Net Overseas Migration by State and Territory",
      "anchor": "middle",
      "fontSize": 16,
      "fontWeight": "bold",
      "dy": -10
    },
    
    "data": {
      "url": "https://raw.githubusercontent.com/MonashAmy/FIT3179-Data-Visualisation-2/refs/heads/main/data/data6.csv",
      "format": {
        "type": "csv"
      }
    },
    
    "width": 450,
    "height": 300,
    
    "transform": [
      {
        "fold": ["Overseas arrivals", "Overseas departures", "Net overseas migration"],
        "as": ["Migration Type", "Total Count"]
      },
      {
        "filter": {
        "selection": "Selector"
      }
      }
    ],
    
    "mark": {
      "type": "bar",
      "tooltip": true
    },
    
    "selection": {
      "Selector": {
        "type": "multi",
        "fields": ["Migration Type"],
        "bind": "legend"
      }
    },
    
    "encoding": {
      "y": {
        "field": "State",
        "type": "nominal"
      },
      "x": {
        "field": "Total Count",
        "type": "quantitative",
        "title": "Total Count",
        "axis": {
          "labelAngle": 45
        }
      },
      "xOffset": {
        "field": "Migration Type"  
      },
      "color": {
        "field": "Migration Type",
        "title": null,
        "legend": {
          "orient": "top",
          "titleOrient": "left",
          "labelBaseline": "middle"
        },
        "scale": {
          "domain": ["Overseas arrivals", "Overseas departures", "Net overseas migration"],
          "range": ["#E2BBE9", "#9B86BD", "#5A639C"]
        }
      }
    },
    
    "config": {
      "mark": {"invalid": null}
    }
  }