{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  
  "title": {
    "text": "Annual Population Change by State and Territory",
    "anchor": "middle",
    "fontSize": 16,
    "fontWeight": "bold",
    "dy": -10
  },
  
  "data": {
    "url": "https://raw.githubusercontent.com/MonashAmy/FIT3179-Data-Visualisation-2/refs/heads/main/data/aus_states.json",
    "format": {
      "type": "topojson",
      "feature": "STE_2016_AUST"
    }
  },

  "transform": [
    {
      "lookup": "properties.STE_NAME16",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/MonashAmy/FIT3179-Data-Visualisation-2/refs/heads/main/data/data1.csv",
          "format": {
            "type": "csv"
          }
        },
        "key": "State",
        "fields": ["Change over previous year (%)"]
      }
    }
  ],

  "width": 480, 
  "height": 380, 

  "projection": {
    "type": "mercator"
  },

  "mark": {"type": "geoshape", "stroke": "black", "strokeWidth": 0.5},

  "encoding": {
    "color": {
      "field": "Change over previous year (%)",
      "type": "quantitative",
      "scale": {
        "domain": [0, 4],
        "range": ["#cce4f7", "#2b6ea7"] 
      },
      "title": "Population (%)"
    },
    
    "tooltip": [
      {"field": "properties.STE_NAME16", "type": "nominal", "title": "State"},
      {"field": "Change over previous year (%)", "type": "quantitative", "title": "Yearly Change (%)"}
    ]
  },

  "config": {
    "view": {"stroke": null}, 
    "background": null
  }
}