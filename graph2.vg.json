{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": {
      "text": "Age and Sex Distribution Across Capital Cities",
      "anchor": "middle",
      "fontSize": 16,
      "fontWeight": "bold",
      "dy": -10
    },
    "description": "A population pyramid showing percentages by age group, gender, and location in Australia.",
    
    "data": {
      "url": "https://raw.githubusercontent.com/MonashAmy/FIT3179-Data-Visualisation-2/main/data/data2.csv"
    },
    
    "transform": [
      {
        "calculate": "trim(datum['Age group (years)'])",
        "as": "AgeGroup"
      },
      {
        "calculate": "trim(datum.Gender)",
        "as": "GenderClean"
      },
      {
        "calculate": "trim(datum.Location)",
        "as": "LocationClean"
      },
      {
        "calculate": "datum.GenderClean === 'Females' ? -datum.Percentage : datum.Percentage",
        "as": "signed_percentage"
      },
      {
        "calculate": "datum.GenderClean + ' - ' + datum.LocationClean",
        "as": "GenderLocation"
      },
      {
        "calculate": "round(datum.Percentage * 100) / 100",
        "as": "RoundedPercentage"
      }
    ],
  
    "width": 360,
    "height": 350,
    
    "mark": {
      "type": "bar",
      "tooltip": true
    },
    
    "encoding": {
      "y": {
        "field": "AgeGroup",
        "type": "ordinal",
        "axis": {
          "title": "Age Group"
        },
        "sort": "descending"
      },
      "x": {
        "aggregate": "sum",
        "field": "signed_percentage",
        "title": "Population (%)",
        "axis": {
          "format": "s"
        }
      },
      "color": {
        "field": "GenderLocation",
        "scale": {
          "domain": [
            "Females - Capital cities", "Females - Rest of Australia",
            "Males - Capital cities", "Males - Rest of Australia"
          ],
          "range": [
            "#6482AD", "#98B3CC",
            "#7E303A", "#B19296"  
          ]
        },
        "legend": {
          "orient": "right",
          "title": "Population Type",
          "titleFontSize": 10,
          "labelFontSize": 10
        }
      },
      "tooltip": [
        {
          "field": "GenderLocation",
          "title": "Gender and Location"
        },
        {
          "field": "RoundedPercentage",
          "title": "Population (%)",
          "format": ".2f"
        },
        {
          "field": "AgeGroup",
          "title": "Age Group"
        }
      ]
    },
    
    "config": {
      "view": {
        "stroke": null
      },
      "axis": {
        "grid": false
      }
    }
  }  