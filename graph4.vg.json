{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    
    "title": {
      "text": "Resident Population by Country of Birth",
      "anchor": "middle",
      "fontSize": 16,
      "dy": -10  
    },
  
    "description": "Pie chart illustrating Australia's estimated population by country of birth in 2023, excluding Australia to highlight the countries with the largest migrant populations.",
  
    "data": {
      "url": "https://raw.githubusercontent.com/MonashAmy/FIT3179-Data-Visualisation-2/refs/heads/main/data/data4.csv",
      "format": {
        "type": "csv"
      }
    },
  
    "width": 390,  
    "height": 370, 
  
    "config": {
      "view": {
        "stroke": null
      }
    },
  
    "layer": [
      {
        "mark": {
          "type": "arc",
          "tooltip": true 
        },
        "params": [
          {
            "name": "country_parameter",
            "select": {"type": "point", "fields": ["Country of birth"]},
            "bind": "legend"
          }
        ],
        "encoding": {
          "theta": {
            "field": "Estimated population 2023 (%)",
            "type": "quantitative"
          },
          "color": {
            "field": "Country of birth",
            "type": "nominal"
          },
          "tooltip": [
            {"field": "Country of birth", "type": "nominal", "title": "Country"},
            {"field": "Estimated population 2023 (%)", "type": "quantitative", "title": "Population (%)"}
          ],
          "opacity": {
            "condition": {"param": "country_parameter", "value": 1},
            "value": 0.2
          }
        }
      }
    ]
  }
  